<style>
    body{
        padding: 96px 0 0 16px;
    }

    .header{
        display: none;
    }

    .btn-success{
        color: #fff;
        font-weight: 500;
        font-size: 1.1em;
    }
</style>
<div>
    <form method="POST" action="/product/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="select">Mã sản phẩm</label>
            <input value="{{product.select}}" class="form-control" id="select" name="select">
        </div>
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input value="{{product.name}}" type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="price">Giá</label>
            <input value="{{product.price}}" type="text" class="form-control" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input value="{{product.image}}" type="text" class="form-control" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-success">Cập nhật</button>
    </form>
</div>